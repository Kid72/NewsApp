<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication2.ui.home.HomeFragment"
        android:label="Новости"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.myapplication2.ui.categories.CategoriesFragment"
        android:label="Категории"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.myapplication2.ui.search.SearchFragment"
        android:label="Поиск"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.example.myapplication2.ui.bookmarks.BookmarksFragment"
        android:label="Закладки"
        tools:layout="@layout/fragment_bookmarks" />
</navigation>
